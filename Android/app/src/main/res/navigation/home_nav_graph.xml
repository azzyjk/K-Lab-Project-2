<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.communcationingarden.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/communityFragment"
        android:name="com.example.communcationingarden.community.CommunityFragment"
        android:label="fragment_community"
        tools:layout="@layout/fragment_community" />

    <fragment
        android:id="@+id/myFragment"
        android:name="com.example.communcationingarden.my.MyFragment"
        android:label="fragment_my"
        tools:layout="@layout/fragment_my" />

    <fragment
        android:id="@+id/infoFragment"
        android:name="com.example.communcationingarden.info.InfoFragment"
        android:label="fragment_info"
        tools:layout="@layout/fragment_info">
        <action
            android:id="@+id/action_infoFragment_to_infoDetailFragment"
            app:destination="@id/infoDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/infoDetailFragment"
        android:name="com.example.communcationingarden.infodetail.InfoDetailFragment"
        android:label="fragment_info_detail"
        tools:layout="@layout/fragment_info_detail" />

</navigation>
